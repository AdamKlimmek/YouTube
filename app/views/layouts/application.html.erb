<!DOCTYPE html>
<html>
  <head>
    <title>ZooTube</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('fav.png') %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700" rel='stylesheet' type='text/css'>

    <script type="text/javascript">
      window.defaultThumbnailURL = "<%= image_url('default_thumbnail.jpeg') %>";
      window.noResultsURL = "<%= image_url('no_results.jpeg') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
